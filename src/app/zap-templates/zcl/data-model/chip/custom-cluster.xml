<configurator>
  <domain name="CHIP"/>

  <cluster>
    <domain>General</domain>
    <name>Sample ESP</name>
    <!-- The MSB 16 bits of <code> are the VendorID. Replace this with your
         VendorID. 0xFFF1 is a Test VendorID.

         The LSB 16 bits of <code> are a self-assigned ClusterID -->
    <code>0x131BFC20</code>
    <define>SAMPLE_ESP_CLUSTER</define>
    <description>The Sample Espressif cluster</description>

    <!-- Attributes -->
    <attribute side="server" code="0x0000" define="MESSAGE_DOWNSTREAM" type="long_octet_string" writable="true" length="1000">MessageDownstream</attribute>
    <attribute side="server" code="0x0001" define="MESSAGE_UPSTREAM" type="long_octet_string" writable="false" length="1000">MessageUpstream</attribute>

  </cluster>
</configurator>
